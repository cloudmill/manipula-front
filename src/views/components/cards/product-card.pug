mixin card
  .card(data-fancy-button='product', data-aos='fade-up')
    .card__top
      picture
        source(srcset='assets/images/product-0.webp', type='image/webp')
        img(src='assets/images/product-0.jpg', alt='')
      .card__labels
        .card-label.red NEW
        .card-label.blue
          img(src='assets/images/svg/rus.svg', alt='')
          | RUS
    .card__info
      .card__category Перчатки
      .card__title Микропол MG-162 (ex. TPU-13)

      -
        const items = [
          { title: 'Основа', value: 'Интерлок' },
          { title: 'Покрытие', value: 'Нитрил' },
          { title: 'Длина', value: '250-270 мм' },
          { title: 'Размеры', value: '8, 9, 10' },
          { title: 'Упаковка', value: '12/120 пар' },
        ]
      each el in items
        .card-row
          .card-row__title= el.title
          .card-row__value= el.value
