mixin breadcrumbs
  .breadcrumbs(class=attributes.class)
    ul.breadcrumbs__list(data-aos='fade-up')
      li.breadcrumbs__item
        a.breadcrumbs__link(href='#') 
          | Главная
      if (attributes.items)
        each item in attributes.items 
          li.breadcrumbs__item
            a.breadcrumbs__link(href='#') 
              | #{ item }
      li.breadcrumbs__item
        .breadcrumbs__text
          span.red [
          span.text #{ attributes.page }
          span.red ]
