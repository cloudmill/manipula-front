extends ../app

include ../components/breadcrumbs

block content
  .container.solutions-search
    +breadcrumbs(page='Подобрать защитное решение')
    h1.h1(data-aos='fade-up') Подобрать защитное решение

    .solutions-title(data-aos='fade-up')
      .slider-control.dark
        +arrow-left
      h3 Профессия

    .solutions-note(data-aos='fade-up') Наш каталог содержит средства индивидуальной защиты рук для более 5000 профессий. #[br] Воспользуйтесь умным поиском или выберите из самых популярных.

    .search-form(data-solutions-search, data-aos='fade-up')
      label.search(data-search-form)
        .search__ico
          +search
        .search__input
          input(
            type='search',
            name='search',
            placeholder='Введите запрос',
            autocomplete='off',
            data-search,
            data-solutions-input
          )
        button.search__reset(data-search-reset)
          +white-cross

    .solutions-queries(data-aos='fade-up')
      .solutions-queries__title Популярные запросы
      .solutions-queries__row
        -
          const items = [
            'Дефектовщик',
            'Заготовщик бумажных пакетов',
            'Горнорабочий подземный',
            'Горнорабочий на геологических работах',
            'Асфальтобетонщик-варильщик',
            'Заготовщик водорослей',
            'Бурильщик шпуров',
            'Бетонщик',
            'Проходчик горных склонов'
          ]
        each it in items
          .solutions-queries__item= it

    #solutions-search
      .dropdown-inner.sol-search
        ul.dropdown-list
          li Асфальтобетонщик-варильщик
          li Аппретурщик
          li Аппаратчик газового консервирования
