extends ../app

include ../components/breadcrumbs
include ../components/cards/news-card

block content
  .container
    +breadcrumbs(page='Технологии')
    h1.h1(data-aos='fade-up') Технологии

    .tabs.news-filters(data-aos='fade-up')
      .tabs__item.active Все

      each el in ['Натуральные материалы', 'Синтетические материалы', 'Натуральные каучуки', 'Синтетические каучуки', 'Полимеры']
        a.tabs__item(href)= el

    .tech-table
      -
        const cards = [
          'Волокно Thermolite® EcoMade Волокно Thermolite® EcoMade',
          'Защита INPAX™',
          'Shelter Micro™',
          'Многофункциональная ткань ARMORTEX® Многофункциональная ткань ARMORTEX®',
          'Водонепроницаемая мембрана HIPORA®',
          '3M™ Thinsulate™',
          'Хлопок',
          'Шерсть'
        ]

      each el, i in cards
        .tech-card(data-fancy-button='tech', data-aos='fade-up', data-client)
          img.tech-card__img(src=`assets/images/tech-${i}.png`, alt='')
          .tech-card__title= el
          .tech-card__tag Синтетические материалы

block modals
  include ../components/modals/tech-modal
