  .main-bg2-section
    .container
      .trust
        h2.about-title Нам доверяют
        .trust__tabs.tabs.only-desktop
          -
            const tabs = [
              'Авиакосмическая промышленность',
              'Автомобильная промышленность',
              'Атомная энергетика',
              'Газовая промышленность',
              'Оборонно-промышленный комплекс',
              'Нефтяная и нефтеперерабатывающая промышленность',
              'Пищевая промышленность',
              'Химическая промышленность',
              'Электротехническая промышленность',
              'Электроэнергетика'
            ]
          each el, i in tabs
            if i === 0
              .tabs__item.active= el
            else
              a.tabs__item(href)= el

        .trust__list
          -
            const items = [
              'АО «Авиакомпания «Россия»',
              'Госкорпорация «Роскосмос»',
              'АО «Информационные спутниковые системы» имени академика М. Ф. Решетнёва»',
              'ПАО «Роствертол»'
            ]
          each el, i in items
            .trust__item
              picture
                source(
                  srcset=`assets/images/trust-${i}-mob.webp`,
                  type='image/webp',
                  media='(max-width: 1023px)'
                )
                source(
                  srcset=`assets/images/trust-${i}-mob.jpg`,
                  type='image/jpeg',
                  media='(max-width: 1023px)'
                )
                source(
                  srcset=`assets/images/trust-${i}.webp`,
                  type='image/webp'
                )
                img(src=`assets/images/trust-${i}.jpg`, alt='')
              .trust__title= el

      .history
        h2.about-title История

        .history-slider
          #history-slider.swiper
            .swiper-wrapper
              each el in years
                .swiper-slide.history-slider__slide
                  picture
                    img(src='assets/images/history-0.jpg', alt='')
                  .history-slider__info
                    h4= el
                    p Создание бренда Manipula Specialist®. Разработка собственной технологии покрытия SlipGrip и выход первой продукции на рынок.

          #history-thumbs.swiper
            .swiper-wrapper
              each el in years
                .swiper-slide= el

          .controls.only-desktop
            button#history-slider-prev.slider-control.dark
              +arrow-left
            button#history-slider-next.slider-control.dark
              +arrow-right

  .container
    .responsibility
      h2.about-title Социальная ответственность
      .responsibility__cols
        .responsibility__text
          span Здоровье — основополагающая и естественная жизненная ценность. Мы стремимся защитить ее не только в условиях трудовой деятельности, но и в повседневной жизни, оказывая поддержку спорту — главному на сегодня социальному фактору, способному сплотить, объединить и направить в сторону здорового будущего.
        .responsibility__text
          span Мы верим, что вклад в спортивное развитие сегодня — это основа здоровой нации завтра.

      .responsibility__cols
        div
          picture.responsibility__img
            source(
              srcset='assets/images/responsibility-0.webp',
              type='image/webp'
            )
            img(src='assets/images/responsibility-0.jpg', alt='')
          .responsibility__desc Создание футбольной команды
        div
          picture.responsibility__img
            source(
              srcset='assets/images/responsibility-1.webp',
              type='image/webp'
            )
            img(src='assets/images/responsibility-1.jpg', alt='')
          .responsibility__desc Поддержка спортсменам барнаульского клуба каратэ «Амара»
