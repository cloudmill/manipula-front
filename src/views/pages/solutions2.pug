extends ../app

include ../components/breadcrumbs

block content
  .container
    +breadcrumbs(page='Подобрать защитное решение')
    h1.h1 Подобрать защитное решение

    .solutions-steps
      -
        const steps = [
          'Идентифицированные опасности',
          'Вид опасности',
          'Опасные события',
          'Тип СИЗ рук, обязательных к выдаче'
        ]
        const active = 0
      each el, i in steps
        if i < active
          .solutions-steps__item
            .button.filter.old-active.no-hover
              .button__ico= i + 1
              span= el
        else if i === active
          .solutions-steps__item
            .button.filter.active.no-hover
              .button__ico= i + 1
              span= el
        else
          .solutions-steps__item
            .button.filter.no-hover
              .button__ico= i + 1
              span= el

    .solutions-title
      .slider-control.dark
        +arrow-left
      h3 Идентифицированные опасности

    .solutions-choice
      -
        const cards = [
          {
            ico: 0,
            ttl: 'Механические опасности'
          },
          {
            ico: 0,
            ttl: 'Опасность, связанная с воздействием ОПЗ'
          },
          {
